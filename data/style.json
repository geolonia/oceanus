        "type": "fill",
        "source": "oceanus",
        "source-layer": "oc-landuse",
        "filter": [
            "all",
            ["==",["geometry-type"],"Polygon"],
            ["==",["get","class"],"commercial"]
        ],
        "paint": {
            "fill-color": "hsla(0, 60%, 87%, 0.23)"
        }
      },
